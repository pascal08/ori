<?xml version="1.0"?>
<ruleset name="Default Coding Standard">

    <file>packages</file>

    <exclude-pattern>packages/*/build</exclude-pattern>
    <exclude-pattern>packages/*/examples</exclude-pattern>
    <exclude-pattern>packages/*/vendor</exclude-pattern>

    <arg name="tab-width" value="4"/>

    <rule ref="PSR1"/>

    <rule ref="PSR2"/>

    <rule ref="PSR1.Methods.CamelCapsMethodName">
        <exclude-pattern>./packages/*/Tests/*</exclude-pattern>
    </rule>
    <rule ref="PSR1.Classes.ClassDeclaration.MultipleClasses">
        <exclude-pattern>./packages/*/Tests/*</exclude-pattern>
    </rule>
    <rule ref="Generic.Files.LineLength">
        <exclude-pattern>./packages/*/Tests/*</exclude-pattern>
    </rule>
</ruleset>